{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="text-center">Bienvenue sur Todo List !</h1>
    <h1 class="text-center">L'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>

        <div class="row btn-index-1">
            <div class="col-md-offset-2 col-md-4">
                <a href="{{ path('task_create') }}" class="btn btn-global">Créer une nouvelle tâche</a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('task_list') }}" class="btn btn-global">Consulter la liste des tâches</a>
            </div>
        </div>
        {% if is_granted ('ROLE_ADMIN') %}
            <div class="row btn-index-2">
                <div class="col-md-offset-2 col-md-4">
                    <a href="{{ path('user_create') }}" class="btn btn-global">Créer un nouvel utilisateur</a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('user_list') }}" class="btn btn-global">Consulter la liste des utilisateurs</a>
                </div>
            </div>
        {% endif %}
{% endblock %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list">{% endblock %}

{% block body %}


{% endblock %}
